<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dreanei.communion.StartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:minHeight="300px"
            app:srcCompat="@mipmap/communion_icon" />

        <Button
            android:id="@+id/signin_start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/vk_grey_color"
            android:text="@string/sign_in"
            android:textSize="45px"
            tools:ignore="MissingConstraints"
            android:layout_weight="5" />

        <Button
            android:id="@+id/guest_start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/vk_grey_color"
            android:text="@string/guest_signin"
            android:textSize="45px"
            tools:ignore="MissingConstraints"
            android:layout_weight="5" />

        <Button
            android:id="@+id/towebsite_start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@color/vk_grey_color"
            android:text="перейти к веб-приложению"
            android:textSize="45px"
            android:visibility="invisible" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4" />

    </LinearLayout>

</LinearLayout>
