<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dreanei.communion.fragments.MainFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/vk_grey_color">

        <TextView
            android:id="@+id/forumcreateinfo_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Создание форумов возможно только при использовании веб-приложения"
            android:textAlignment="center"
            android:textColor="#aa5555"
            android:textSize="40px"/>

        <Button
            android:id="@+id/towebsite_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="перейти к веб-приложению"
            android:textSize="45px"
            android:background="@color/vk_grey_color" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Список форумов"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="42px"/>

        <ListView
            android:id="@+id/forumslist_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</FrameLayout>
